drop table members CASCADE CONSTRAINTS;
create table members(
num number primary key,
id varchar2(50) not null unique,
password varchar2(50) not null,
name varchar2(50) not null,
regdate date default sysdate,
tel1 varchar2(20) not null,
tel2 varchar2(20) not null,
tel3 varchar2(20) not null,
authority varchar2(20) not null
);
drop sequence members_seq;
create sequence members_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
  
1234서종희
    
drop table video CASCADE CONSTRAINTS;
create table video(
	num number primary key,
	title varchar2(50) not null,
	category varchar2(50) not null,
	grade varchar2(10) not null,
	image varchar2(50) not null
	);
  
  drop sequence video_seq;
create sequence video_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;

drop table video_c CASCADE CONSTRAINTS;
create table video_c(
	num number primary key,
	vnum number not null,
  	title varchar2(50) not null,
	content varchar2(100) not null,
	runningT number not null,
	genre varchar2(80) not null,
	nation varchar2(20) not null,
	actor varchar2(50) not null,
  	grade varchar2(10) not null,
	day varchar2(50) not null,
  series varchar2(10),
  constraint FK_video_c
 	foreign key (vnum)
 		references video(num)
);
drop sequence video_c_seq;
create sequence video_c_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;

drop table faq CASCADE CONSTRAINTS;
create table faq(
   num number not null primary key,
   writer varchar2(20) references members(id) on delete cascade not null,
   subject varchar2(100) not null,
   division varchar2(30) not null,
   reg_date date default sysdate not null,
   content varchar2(1000) not null
);
drop sequence faq_seq;
create sequence faq_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
    drop table notice CASCADE CONSTRAINTS;
create table notice( 
   num number not null primary key,
   writer varchar2(20) references members(id) on delete cascade not null,
   subject varchar2(100) not null,
   division varchar2(30) not null,
   reg_date date default sysdate not null,
   content varchar2(1000) not null
);
drop sequence notice_seq;
create sequence notice_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
drop table board CASCADE CONSTRAINTS;
create table board( 
   num number not null primary key,
   writer varchar2(10) references members(id) on delete cascade not null,
   subject varchar2(20) not null,
   reg_date date not null,
   readcount int default 0,
   content varchar2(1000) not null
);
drop sequence board_seq;
create sequence board_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
  drop table reply CASCADE CONSTRAINTS;
create table reply(
rnum int primary key,
bnum int references board(num) on delete cascade not null,
writer varchar2(10) references members(id) on delete cascade not null,
content varchar2(1000),
reg_date date default sysdate
);

drop sequence reply_seq;
create sequence reply_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
drop table coupon CASCADE CONSTRAINTS;
create table coupon(
cp_num int primary key,
cp_id varchar2(20) references members(id) on delete cascade,
cp_name varchar2(50), 
cp_number varchar2(50) unique, 
cp_discount float,  
cp_regdate date,  
cp_duedate date,
cp_usedate date, 
cp_check varchar2(10) default 'false' 
);
   drop sequence coupon_seq;
create sequence coupon_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
  drop table watch CASCADE CONSTRAINTS;
create table watch(
num number not null,
video_num number references video(num) on delete cascade not null,
member_id varchar2(30) references members(id) on delete cascade not null,
watchdate date
);
drop sequence watch_seq;
create sequence watch_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
  drop table jjim CASCADE CONSTRAINTS;
create table jjim(
num number not null,
video_num number references video(num) on delete cascade not null,
member_id varchar2(30) references members(id) on delete cascade not null
);

drop sequence jjim_seq;
create sequence jjim_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;

drop table commodity CASCADE CONSTRAINTS;
create table commodity(
num number primary key,
name varchar2(50) not null,
content varchar2(100) not null,
price number not null
);

drop sequence commodity_seq;
create sequence commodity_seq
increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
  drop table orders CASCADE CONSTRAINTS;
create table orders(
	onum number primary key, 
	mnum number references members(num) on delete set null,
	orderdate date default sysdate, 
	cnum number references commodity(num) on delete set null
);

drop sequence orders_seq;
create sequence orders_seq
increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
  
   drop table qna CASCADE CONSTRAINTS;
create table qna(
   num number primary key,
   writer varchar2(20) references members(id) on delete cascade not null,
   subject varchar2(50) not null,
   ref int not null,
   re_level int not null,
   reg_date date default sysdate not null,
   content varchar2(1000) not null
);
drop sequence qna_seq;
create sequence qna_seq
  increment by 1
  start with 1
  minvalue 1
  maxvalue 10000
  nocache;
 
